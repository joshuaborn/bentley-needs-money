<h2 class="title">Request Connection</h2>

<div class="block">
  <%= form_with model: @connection_request do |form| %>
    <div class="field">
      <%= form.fields_for :to do |to_form| %>
        <%= to_form.label :email, class: "label" %>
        <div class="control">
          <%= to_form.email_field :email, class: "input", autocomplete: "email", autofocus: "autofocus" %>
        </div>
      <% end %>
    </div>
    <div class="field">
      <div class="control">
        <%= form.submit "Request", class: "button is-link" %>
        <%= link_to "Cancel", connections_path, class: "button" %>
      </div>
    </div>
  <% end %>
</div>
